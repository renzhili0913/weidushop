<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:background="@drawable/adapter_home_item_shape"
    android:layout_marginBottom="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"/>
        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112314124214"
            android:layout_toRightOf="@id/name"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/child_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">
        <TextView
            android:id="@+id/expressComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派件公司"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/expressCompName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:layout_toRightOf="@id/expressComp"
            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:id="@+id/expressSn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递单号"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:layout_below="@id/expressComp"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:id="@+id/expressSn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456788"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:layout_toRightOf="@id/expressSn_id"
            android:layout_below="@id/expressCompName"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:id="@+id/payment_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/add_address_shape"/>
    </RelativeLayout>
</LinearLayout>