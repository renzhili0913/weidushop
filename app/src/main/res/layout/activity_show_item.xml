<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/radiogroup"/>
    <ImageView
        android:id="@+id/image_background"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:background="@mipmap/bg_homepage_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <RadioButton
            android:id="@+id/but_home"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:checked="true"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/home_selector"/>
        <RadioButton
            android:id="@+id/but_circle"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/circle_selector"/>
        <RadioButton
            android:id="@+id/but_Cart"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_0"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@mipmap/tab_home_bottom_gouwuche"/>
        <RadioButton
            android:id="@+id/but_Order"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/order_selector"/>
        <RadioButton
            android:id="@+id/but_my"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/my_selector"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>