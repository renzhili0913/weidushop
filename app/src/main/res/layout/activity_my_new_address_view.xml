<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_24"
    android:paddingLeft="@dimen/dp_24">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增收货地址"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_40"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/adapter_home_item_shape"
        android:padding="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_below="@id/text_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="收件人："
                android:layout_marginRight="@dimen/dp_34"/>
            <EditText
                android:id="@+id/realName"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="手机号码："
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="所在地区："
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
            <ImageView
                android:id="@+id/but_linkage"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/ic_action_linkage"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="详细地址："
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/detailed_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="邮政编码："
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/zipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
    <Button
        android:id="@+id/preservation_address"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        android:text="保存并使用"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add_address_shape"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"/>
</RelativeLayout>