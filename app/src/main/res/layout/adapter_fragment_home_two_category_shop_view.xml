<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constrain"
    android:layout_marginBottom="10dp"
    android:background="@drawable/adapter_home_item_shape"
    android:elevation="@dimen/dp_4"
    android:padding="@dimen/dp_10">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iamge"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_105"
        fresco:roundedCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/commodityName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/iamge"
        app:layout_constraintLeft_toLeftOf="@id/iamge"
        app:layout_constraintRight_toRightOf="@id/iamge"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/commodityName"
        app:layout_constraintLeft_toLeftOf="@id/iamge"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/saleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        fresco:layout_constraintTop_toTopOf="@id/price"
        fresco:layout_constraintBottom_toBottomOf="@id/price"
        app:layout_constraintRight_toRightOf="@id/iamge"
        android:layout_marginTop="@dimen/dp_10"/>
</android.support.constraint.ConstraintLayout>