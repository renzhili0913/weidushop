<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    android:layout_margin="@dimen/dp_5"
    android:elevation="@dimen/dp_4"
    android:background="@drawable/adapter_home_item_shape"
    android:layout_marginBottom="@dimen/dp_10">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/commodityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10" />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#f00"
        app:layout_constraintTop_toBottomOf="@id/commodityName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_10" />
    <TextView
        android:id="@+id/browseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/commodityName"
       app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10" />
    <TextView
        android:id="@+id/browseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/browseNum"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10" />
</android.support.constraint.ConstraintLayout>